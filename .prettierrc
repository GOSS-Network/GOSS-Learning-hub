{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "semi": false,
  "singleQuote": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "printWidth": 80,
        "proseWrap": "always",
        "singleQuote": false,
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "htmlWhitespaceSensitivity": "ignore",
        "quoteProps": "as-needed",
        "embeddedLanguageFormatting": "auto",
        "jsxSingleQuote": false,
        "requirePragma": false,
        "insertPragma": false,
        "markdownTemplateCurlyBraces": false
      }
    }
  ]
}

